import java.util.Scanner;

public class main {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);

       double legacy = Double.parseDouble(scan.nextLine());
       double year = Double.parseDouble(scan.nextLine());

       double moneyNeed = 12000;
       double sum1 =0;
       double sum2 = 0;
       double ageIvan = 18;
       double totalMoneyNeed = 0;

        for (int i = 1800; i <= year; i++) {

            if (i % 2 == 0){
                sum1 += moneyNeed;
            }else {
                ageIvan += 1;
                sum2 += moneyNeed + (ageIvan * 50);
            }
        }
        totalMoneyNeed = legacy - (sum1 + sum2);

        if (totalMoneyNeed >= 0){
            System.out.printf("Yes! He will live a carefree " +
                    "life and will have %.2f dollars left.",totalMoneyNeed);
        }else {
            System.out.printf("He will need %.2f dollars " +
                    "to survive.", Math.abs(totalMoneyNeed));
        }

    }
}
