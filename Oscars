import java.util.Scanner;

public class main {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);

        String name = scan.nextLine();
        double totalPoints = Double.parseDouble(scan.nextLine());
        int numberOfPeople = Integer.parseInt(scan.nextLine());

        for (int i = 1; i <= numberOfPeople; i++) {
           String judgeName = scan.nextLine();
           double pointsFromJudge = Double.parseDouble(scan.nextLine());

           totalPoints += (judgeName.length() * pointsFromJudge) / 2;

           if (totalPoints >= 1250.5){
               break;
           }

        }
        if (totalPoints > 1250.5){
            System.out.printf("Congratulations, %s" +
                    " got a nominee for leading role with %.1f!", name, totalPoints);
        }else {
            System.out.printf("Sorry, %s you need %.1f more!", name, Math.abs(1250.5-totalPoints));
        }

    }
}
